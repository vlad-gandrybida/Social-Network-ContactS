@{
    ViewBag.Title = Resources.Resource.About;
}

<div id="carouselExampleIndicators" class="carousel slide mt-5 mb-5" data-ride="carousel" style="height:387px; overflow: hidden;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://www.seoclerks.com/files/user/community/000/000/134/google%20speed%20update.1517143481.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://www.aeteurope.com/wp-content/uploads/2017/04/slider-security.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" style="vertical-align:central">
            <img src="https://cdn3.wpbeginner.com/wp-content/uploads/2017/08/socialnetworkbuddypress.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-speed-list" data-toggle="list" href="#list-speed" role="tab" aria-controls="speed">@Resources.Resource.Speed</a>
            <a class="list-group-item list-group-item-action" id="list-style-list" data-toggle="list" href="#list-style" role="tab" aria-controls="style">@Resources.Resource.Style</a>
            <a class="list-group-item list-group-item-action" id="list-social-list" data-toggle="list" href="#list-social" role="tab" aria-controls="social">@Resources.Resource.Social</a>
            <a class="list-group-item list-group-item-action" id="list-security-list" data-toggle="list" href="#list-security" role="tab" aria-controls="security">@Resources.Resource.Security</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-speed" role="tabpanel" aria-labelledby="list-speed-list">@Resources.Resource.SpeedListText</div>
            <div class="tab-pane fade" id="list-style" role="tabpanel" aria-labelledby="list-style-list">@Resources.Resource.StyleListText</div>
            <div class="tab-pane fade" id="list-social" role="tabpanel" aria-labelledby="list-social-list">@Resources.Resource.SocialListText</div>
            <div class="tab-pane fade" id="list-security" role="tabpanel" aria-labelledby="list-security-list">@Resources.Resource.SecurityListText</div>
        </div>
    </div>
</div>