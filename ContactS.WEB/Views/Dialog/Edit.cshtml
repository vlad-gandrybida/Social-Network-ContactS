@model ContactS.BLL.DTO.DialogDTO

<div class="modal-content border-primary">
    <div class="modal-header">
        <h5 class="modal-title text-primary">@Resources.Resource.ChangeDialog</h5>
        <button type="button" class="close text-danger" data-dismiss="modal" aria-label="@Resources.Resource.Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("Edit", "Dialog", FormMethod.Post))
        {
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control border-primary" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Id)
                    <div class="btn-group float-right mt-3 ">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.Resource.Close</button>
                        <input type="submit" value="@Resources.Resource.Edit" class="btn btn-primary" />
                    </div>
        }
    </div>
</div>

