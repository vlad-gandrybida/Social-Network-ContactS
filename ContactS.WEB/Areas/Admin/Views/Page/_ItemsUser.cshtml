@model IEnumerable<ContactS.WEB.Areas.Admin.Models.AdminUsersViewModel>


@foreach (var item in Model) {
<div class="col-12 m-1 ">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-1">
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png" alt="..." class="rounded-circle" style="max-width:80%">
            </div>
            <div class="col-11">
                <div class="row">
                    <div class="col-10">
                        <h5 class="m-0">@item.Name</h5>
                        <small class="text-muted" style="font-size:0.8rem">@item.UserName</small>
                    </div>
                    <div class="col-2">
                        @if (item.Role == "user")
                        {
                            @Html.Hidden("Id", item.Id)
                            @Html.Hidden("Role", "admin")
                            <input type="submit" value=@Resources.Resource.User class="btn btn-lg btn-primary btn-block h-100" />
                        }
                        else
                        {
                            <a href="#" class="h-100 btn btn-block btn-danger btn-lg disabled" tabindex="-1" role="button" aria-disabled="true">@Resources.Resource.Admin</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
}
